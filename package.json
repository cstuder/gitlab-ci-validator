{
    "name": "gitlab-ci-validator",
    "displayName": "gitlab-ci-validator",
    "description": "Validate the content of your Gitlab CI YAML file",
    "version": "0.0.1",
    "publisher": "cstuder",
    "engines": {
        "vscode": "^1.18.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.validateCIYaml"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [{
            "command": "extension.validateCIYaml",
            "title": "Validate Gitlab CI YAML"
        }]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}